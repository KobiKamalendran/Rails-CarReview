
<div class="w3-half">
	<img src=<%= @car.car_img %> style="width:100%;height:500px" class="w3-hover-opacity" >
</div>

<div class="w3-half w3-text-white w3-padding">
	<h1>Make: <%= @car.make %></h1>
	<h2>Rating: <%= @average %>/10 </h2>
	<span>Based on: <%= @car.reviews.count %></span>
	<h2>Model: <%= @car.model %></h2>
	<h2>Year: <%= @car.year %></h2>
	<h2>Contact: <%= @car.contact %></h2>
	<% if user_signed_in? && @car.user_id == current_user.id %> 
		<div>
		<%= link_to 'Edit', edit_car_path(@car) %>
		</div>
		<%= link_to 'Delete', car_path(@car), method: :delete %>

		<div>
		<%= link_to 'Add Review', new_car_review_path(@car) %>
		</div>

	<% end %>
	<% if @car.reviews.count!=0 %>
		<h2>Reviews:</h2>
		<%= render @car.reviews %>
	<% end %>
	<%= link_to 'Back', root_path %>


</div>



