




<% if @cars.count == 0 %>
	<h3>Nothing to show</h3>

<% else %>

	

	<div class="w3-row-padding">
		<% @cars.each do |car| %>
	    <div class="w3-third w3-container w3-margin-bottom w3-center">
	      <img src=<%= car.car_img %> style="width:100%;height:250px" class="w3-hover-opacity" >
	      <div class="w3-container w3-black">
	        <h2><%= car.make %></h2>
			<% carModel = car.model + ' ' + car.year.to_s %>
			<h5><%= link_to carModel, car_path(car) %></h5>
	      </div>
	    </div>
	    <% end %>

	</div>



<% end %>
